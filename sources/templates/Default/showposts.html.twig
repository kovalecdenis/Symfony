{% extends 'layout.html.twig' %}

{% block body %}
    {% for post in posts %}
<div class="row g-5">
    <div class="col-md-8">
        <article class="blog-post">
            <h2 class="blog-post-title">{{ post.getName() }}</h2>
            <p class="blog-post-meta">{{ post.getPublishedAt()|date('Y-m-d')}} by <a href="#">Mark</a></p>
           <pre>
               {{ post.GetDescription() }}
           </pre>
        </article>
    </div>
</div>
    {% endfor %}
{% endblock %}
