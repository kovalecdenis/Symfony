{% extends 'layout.html.twig' %}

{% block body %}
    <main class="container">
        <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
            <div class="col-md-6 px-0">
                <h1 class="display-4 fst-italic">{{ 'Title of a longer featured blog post'|trans }}</h1>
                <p class="lead my-3">
                    {{ 'Multiple lines of text that form the lede, informing new readers quickly and efficiently about what’s most interesting in this post’s contents'|trans }}
                </p>
                <p class="lead mb-0"><a href="#" class="text-white fw-bold">{{ 'Continue reading...'|trans }}</a></p>
            </div>
        </div>


        <div class="row g-5">
            <div class="col-md-8">
            {% for post in posts %}
                <article class="blog-post">
                    <h2 class="blog-post-title">{{ post.getName() }}</h2>
                    <p class="blog-post-meta">{{ post.getPublishedAt()|date('Y-m-d') }}  <a href="{{ path('show_post', { post: post.getId() }) }}">{{ 'Show'|trans }}</a></p>
                    <p>{{ post.getDescription() }}</p>
                </article>
            {% endfor %}

                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">{{ 'Previous'|trans }}</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">{{ 'Next'|trans }}</a></li>
                    </ul>
                </nav>

            </div>

            <div class="col-md-4">
                <div class="position-sticky" style="top: 2rem;">
                    <div class="p-4 mb-3 bg-light rounded">
                        <h4 class="fst-italic">{{ 'About'|trans }}</h4>
                        <p class="mb-0">{{ 'Customize this section to tell your visitors a little bit about your publication, writers, content, or something else entirely. Totally up to you.'|trans }}</p>
                    </div>

                    <div class="p-4">
                        <h4 class="fst-italic">{{ 'Archives'|trans }}</h4>
                        <ol class="list-unstyled mb-0">
                            <li><a href="#">{{ 'March'|trans }} 2021</a></li>
                            <li><a href="#">{{ 'February'|trans }} 2021</a></li>
                            <li><a href="#">{{ 'January'|trans }} 2021</a></li>
                            <li><a href="#">{{ 'December'|trans }} 2020</a></li>
                            <li><a href="#">{{ 'November'|trans }} 2020</a></li>
                            <li><a href="#">{{ 'October'|trans }} 2020</a></li>
                            <li><a href="#">{{ 'September'|trans }} 2020</a></li>
                            <li><a href="#">{{ 'August'|trans }} 2020</a></li>
                            <li><a href="#">{{ 'July'|trans }} 2020</a></li>
                            <li><a href="#">{{ 'June'|trans }} 2020</a></li>
                            <li><a href="#">{{ 'May'|trans }} 2020</a></li>
                            <li><a href="#">{{ 'April'|trans }} 2020</a></li>
                        </ol>
                    </div>

                    <div class="p-4">
                        <h4 class="fst-italic">{{ 'Elsewhere'|trans }}</h4>
                        <ol class="list-unstyled">
                            <li><a href="#">GitHub</a></li>
                            <li><a href="#">Twitter</a></li>
                            <li><a href="#">Facebook</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}